{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with tray support",
  "windows": [
    "main",
    "confirm-recording"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:tray:default",
    "core:menu:default",
    "notification:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-delete",
    "store:allow-clear",
    "core:window:allow-close",
    "core:window:allow-create",
    "core:window:allow-set-always-on-top",
    "core:window:allow-set-focus"
  ]
}